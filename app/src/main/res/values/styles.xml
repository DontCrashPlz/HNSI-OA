<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppLauncher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="mProgress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_background</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="simple_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="activity_skip_animation">
        <item name="android:activityCloseEnterAnimation">@anim/activity_left_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_exit_anim</item>
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_left_exit_anim</item>
    </style>

</resources>
