<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_login">

    <LinearLayout
        android:id="@+id/login_panel_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:focusableInTouchMode="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/login_et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="账号"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:drawableLeft="@mipmap/username"
                android:drawablePadding="14dp"
                android:background="@null"
                android:lines="1"
                android:maxLength="16"/>
            <ImageView
                android:visibility="invisible"
                android:layout_marginRight="12dp"
                android:padding="5dp"
                android:src="@mipmap/search_clear_normal"
                android:id="@+id/activity_login_iv_delete_username"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/underLineGrey"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/login_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="密码"
                android:textCursorDrawable="@null"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:drawableLeft="@mipmap/password"
                android:drawablePadding="14dp"
                android:background="@null"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="16"/>
            <ImageView
                android:visibility="invisible"
                android:layout_marginRight="12dp"
                android:padding="5dp"
                android:src="@mipmap/search_clear_normal"
                android:id="@+id/activity_login_iv_delete_password"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/underLineGrey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/login_cb_remeber_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:text="记住密码"
                android:textColor="@android:color/white"
                android:checked="false" />
            <CheckBox
                android:id="@+id/login_cb_automatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:text="自动登录"
                android:textColor="@android:color/white"
                android:checked="false" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/login_panel_userinfo">
        <ImageView
            android:id="@+id/hnti_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hnti_icon"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YICR综合信息管理系统"
            android:layout_below="@+id/hnti_icon"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/login_tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="忘记密码？"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:padding="6dp"
        android:textSize="16dp"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/login_ibtn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/setting"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="河南省信息咨询设计研究有限公司"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_panel_userinfo"
        android:layout_above="@+id/login_ibtn_setting">

        <LinearLayout
            android:id="@+id/login_panel_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/login_btn_login"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:text="登录"
                android:textColor="@color/textGrey"
                android:textSize="16dp"
                android:background="@drawable/login_button_background_selector"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>