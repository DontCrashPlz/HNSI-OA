<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_news_withoutimg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_rly_background_selector"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:clickable="true">

    <TextView
        android:id="@+id/item_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新闻标题"
        android:textColor="#3d3e3b"
        android:textSize="16dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/item_news_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_news_title"
        android:text="新闻类型"
        android:textSize="13dp"
        android:textColor="#8e8f8a"/>

    <TextView
        android:id="@+id/item_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_news_kind"
        android:layout_alignParentRight="true"
        android:text="2000-01-01"
        android:textSize="11dp"
        android:textColor="#a3a3a3"/>

    <TextView
        android:id="@+id/item_news_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_news_kind"
        android:text="发布部门"
        android:textColor="#a3a3a3"
        android:textSize="11dp"
        android:layout_toLeftOf="@+id/item_news_time"
        android:layout_marginRight="4dp"/>

</RelativeLayout>