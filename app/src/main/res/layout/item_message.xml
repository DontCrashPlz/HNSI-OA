<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_message_rly"
    android:background="@drawable/mine_rly_background_selector"
    android:clickable="true">
    <TextView
        android:id="@+id/item_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:lineSpacingExtra="3dp"
        android:ellipsize="end"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/item_message_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品研发部"
        android:textSize="13sp"
        android:layout_below="@+id/item_message_title"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:id="@+id/item_notice_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/item_message_department"
        android:layout_toRightOf="@+id/item_message_department"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/item_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000-00-00  00:00"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/item_message_department"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"/>

</RelativeLayout>