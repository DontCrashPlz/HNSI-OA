<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_toolbar"/>

            <com.hnsi.oa.hnsi_oa.widgets.CustomTabLayout.ViewPagerTitle
                android:id="@+id/viewpagertitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:defaultTextViewSize="8dp"
                app:selectedTextViewSize="16dp"
                app:line_start_color="?attr/colorPrimary"
                app:line_end_color="?attr/colorPrimary"
                app:line_height="5"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#efefef"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_gravity="start">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</FrameLayout>