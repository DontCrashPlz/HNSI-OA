<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hnsi.oa.hnsi_oa">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 写入扩展存储，向扩展卡写入数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".login.widget.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.widget.LoginActivity">
        </activity>

        <activity
            android:name=".login.widget.SettingActivity">
        </activity>

        <activity
            android:name=".main.widget.HomeActivity">
        </activity>

        <activity android:name=".news.widget.NewsDetailActivity">

        </activity>

        <activity android:name=".news.widget.NewsActivity">

        </activity>

        <activity android:name=".news.widget.NoticeActivity">

        </activity>

        <activity android:name=".approval.widget.ApprovalActivity">

        </activity>

    </application>

</manifest>
